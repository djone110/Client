<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?android:attr/actionModeSplitBackground">

    <EditText android:id="@+id/typing_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/typing_speed_title"
        android:ems="10"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:background="@color/colorAccent"/>

    <Button
        android:background="@color/buttonColor"
        android:text="@string/done"
        android:id="@+id/done_typing_game"
        android:elevation="17dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="22dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/type_here"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here!"
        android:inputType="text"
        android:layout_below="@+id/editText7"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText6"
        android:text="@string/typing_speed_instr"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/colorAccent"
        android:paddingBottom="10dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText7"
        android:text="@string/typing_speed_text"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textStyle="normal|italic"
        android:textSize="20sp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>